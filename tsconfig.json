{
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": false,
		"declaration": true,
		"baseUrl": "src",
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "CommonJS",
		"removeComments": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"composite": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "tests", "jest.*"],
	"include": ["**/*"],
	"files": ["tests/global.d.ts"]
}